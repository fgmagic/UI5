<mvc:View
	controllerName="com.myorg.myapp.controller.Products"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/myorg/myapp/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<List
				items="{/Customers}">
				<items>
					<StandardListItem
						title="{CustomerID}"
						description="{CompanyName}"
						info="{ContactName} {ContactTitle}"/>
				</items>
    		</List>
		</content>
	</Page>

</mvc:View>